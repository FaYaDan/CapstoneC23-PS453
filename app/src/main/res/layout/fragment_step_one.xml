<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_27374D"
    tools:context=".ui.step.StepOneFragment">

    <TextView
        android:id="@+id/app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="@string/app_name"
        android:textColor="@color/white_DDE6ED"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/step_1"
        android:textColor="@color/white_DDE6ED"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivcontainer" />

    <TextView
        android:id="@+id/text_descstep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:text="@string/lorem_ipsum"
        android:textColor="@color/white_DDE6ED"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_step" />


    <ImageView
        android:id="@+id/ivcontainer"
        android:layout_width="wrap_content"
        android:layout_height="318dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/icon_plus"
        android:src="@drawable/photo_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app" />

    <ImageView
        android:id="@+id/ivvector1"
        android:layout_width="98dp"
        android:layout_height="267dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/vector_1"
        android:src="@drawable/vector_1"
        app:layout_constraintEnd_toEndOf="@+id/ivcontainer"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/ivcontainer"
        app:layout_constraintTop_toTopOf="@+id/ivcontainer" />

    <ImageView
        android:id="@+id/ivslide1"
        android:layout_width="23dp"
        android:layout_height="9dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/icon_slide"
        android:src="@drawable/slide_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_descstep" />

</androidx.constraintlayout.widget.ConstraintLayout>